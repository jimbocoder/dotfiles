[user]
        name = Jim Howell
        email = xxxxxx@gmail.com
[core]
        editor = vim
        # whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
        whitespace=-indent-with-non-tab,trailing-space,cr-at-eol
        pager = 
[push]
        default = simple
[alias]
        st = status
        df = diff
        dc = diff --cached
        ci = commit
        br = branch
        co = checkout
[branch]
        autosetuprebase = always
[color]
        ui = auto
[color "branch"]
        current = yellow reverse
        local = yellow
        remote = green

[color "diff"]
        meta = yellow bold
        frag = magenta bold
        old = red bold
#        new = green bold
        whitespace = red reverse

[color "status"]
        added = yellow
        changed = green
        untracked = cyan

[rerere]
	enabled = true
[diff]
	algorithm = patience
